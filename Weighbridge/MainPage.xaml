<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Weighbridge"
             xmlns:converters="clr-namespace:Weighbridge.Converters"
             xmlns:behaviors="clr-namespace:Weighbridge.Behaviors"
             x:Class="Weighbridge.MainPage"
             Title="Weighbridge System"
             BackgroundColor="#0E0E0E">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToStringConverter x:Key="BoolToStringConverter" />

            <DataTrigger x:Key="MobileLayoutTrigger" TargetType="Grid" Binding="{Binding Source={x:Reference MainGrid}, Path=Width}" Value="600">
                <Setter Property="ColumnDefinitions" Value="*" />
            </DataTrigger>

            <x:Double x:Key="HeaderFontSize">24</x:Double>
            <x:Double x:Key="WeightFontSize">48</x:Double>
            <x:Double x:Key="SubWeightFontSize">32</x:Double>
            <x:Double x:Key="LabelFontSize">12</x:Double>
            <x:Double x:Key="ButtonFontSize">12</x:Double>

            <x:Double x:Key="MobileHeaderFontSize">20</x:Double>
            <x:Double x:Key="MobileWeightFontSize">36</x:Double>
            <x:Double x:Key="MobileSubWeightFontSize">24</x:Double>
            <x:Double x:Key="MobileLabelFontSize">10</x:Double>
            <x:Double x:Key="MobileButtonFontSize">10</x:Double>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid x:Name="MainGrid" Padding="10,0,10,10" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" x:Name="ContentGrid" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BackgroundColor="#1A1A1A" Stroke="Transparent" StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,4" Radius="16" Opacity="0.3" />
                </Border.Shadow>
                <ScrollView>
                    <Grid Padding="10" RowSpacing="8" ColumnSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" x:Name="ModesGrid" ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border x:Name="TwoWeightsButton" Grid.Column="0" BackgroundColor="#00FF7F" StrokeThickness="0" Stroke="#444">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnTwoWeightsClicked" />
                                </Border.GestureRecognizers>
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Label Text="2 Weights" TextColor="#0E0E0E" HorizontalOptions="Center" Padding="6" 
                                       FontSize="{StaticResource ButtonFontSize}" FontAttributes="Bold"/>
                            </Border>

                            <Border x:Name="EntryAndTareButton" Grid.Column="1" BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnEntryAndTareClicked" />
                                </Border.GestureRecognizers>
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Label Text="Entry + Tare" TextColor="#CCCCCC" HorizontalOptions="Center" Padding="6" 
                                       FontSize="{StaticResource ButtonFontSize}"/>
                            </Border>

                            <Border x:Name="TareAndExitButton" Grid.Column="2" BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnTareAndExitClicked" />
                                </Border.GestureRecognizers>
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Label Text="Tare + Exit" TextColor="#CCCCCC" HorizontalOptions="Center" Padding="6" 
                                       FontSize="{StaticResource ButtonFontSize}"/>
                            </Border>

                            <Border x:Name="SingleWeightButton" Grid.Column="3" BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnSingleWeightClicked" />
                                </Border.GestureRecognizers>
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Label Text="Single Weight" TextColor="#CCCCCC" HorizontalOptions="Center" Padding="6" 
                                       FontSize="{StaticResource ButtonFontSize}"/>
                            </Border>
                        </Grid>

                        <Border Grid.Row="2" BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444" Margin="0,8,0,0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <VerticalStackLayout Padding="16,20" Spacing="6">
                                <Label Text="LIVE WEIGHT" TextColor="#CCCCCC" HorizontalOptions="Center" 
                                       FontSize="{StaticResource HeaderFontSize}" FontAttributes="Bold"/>
                                <Label x:Name="LiveWeightLabel" Text="{Binding LiveWeight, FallbackValue='0.00'}" 
                                       TextColor="White" HorizontalOptions="Center" 
                                       FontSize="{StaticResource WeightFontSize}" FontAttributes="Bold" />
                                <Label Text="KG" TextColor="#CCCCCC" HorizontalOptions="Center" FontSize="14" />
                                <Label Text="{Binding IsScaleAtZero}" TextColor="White" HorizontalOptions="Center" FontSize="12" FontAttributes="Bold" />
                                <Button x:Name="TestButton" Text="TEST" BackgroundColor="Orange" TextColor="Black" 
                                        Clicked="OnTestWeightClicked" FontSize="10" HeightRequest="30" Margin="0,4,0,0"/>
                                <Button x:Name="SimulateDocketsButton" Text="SIMULATE 100" BackgroundColor="Purple" TextColor="White" 
                                        Clicked="OnSimulateDocketsClicked" FontSize="10" HeightRequest="30" Margin="0,4,0,0"/>
                            </VerticalStackLayout>
                        </Border>

                        <Grid Grid.Row="3" x:Name="WeightsGrid" ColumnSpacing="12" VerticalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12" />
                                </Border.StrokeShape>
                                <StackLayout Padding="12,16" Spacing="6">
                                    <Label Text="ENTRANCE" TextColor="#CCCCCC" HorizontalOptions="Center" 
                                           FontSize="{StaticResource LabelFontSize}" FontAttributes="Bold"/>
                                    <Label x:Name="EntranceWeightLabel" Text="{Binding EntranceWeight, FallbackValue='0'}" 
                                           TextColor="White" HorizontalOptions="Center" 
                                           FontSize="{StaticResource SubWeightFontSize}" FontAttributes="Bold" />
                                    <Label Text="KG" TextColor="#CCCCCC" HorizontalOptions="Center" FontSize="12" />
                                    <Ellipse Fill="#00FF7F" WidthRequest="8" HeightRequest="8" HorizontalOptions="Center" />
                                </StackLayout>
                            </Border>

                            <Border Grid.Column="1" BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12" />
                                </Border.StrokeShape>
                                <StackLayout Padding="12,16" Spacing="6">
                                    <Label Text="EXIT" TextColor="#CCCCCC" HorizontalOptions="Center" 
                                           FontSize="{StaticResource LabelFontSize}" FontAttributes="Bold"/>
                                    <Label Text="{Binding ExitWeight, FallbackValue='0'}" TextColor="White" HorizontalOptions="Center" 
                                           FontSize="{StaticResource SubWeightFontSize}" FontAttributes="Bold" />
                                    <Label Text="KG" TextColor="#CCCCCC" HorizontalOptions="Center" FontSize="12" />
                                    <Ellipse Fill="#444" WidthRequest="8" HeightRequest="8" HorizontalOptions="Center" />
                                </StackLayout>
                            </Border>

                            <Border Grid.Column="2" BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12" />
                                </Border.StrokeShape>
                                <StackLayout Padding="12,16" Spacing="6">
                                    <Label Text="NET WEIGHT" TextColor="#CCCCCC" HorizontalOptions="Center" 
                                           FontSize="{StaticResource LabelFontSize}" FontAttributes="Bold"/>
                                    <Label Text="{Binding NetWeight, FallbackValue='0'}" TextColor="White" HorizontalOptions="Center" 
                                           FontSize="{StaticResource SubWeightFontSize}" FontAttributes="Bold" />
                                    <Label Text="KG" TextColor="#CCCCCC" HorizontalOptions="Center" FontSize="12" />
                                    <Ellipse Fill="#444" WidthRequest="8" HeightRequest="8" HorizontalOptions="Center" />
                                </StackLayout>
                            </Border>
                        </Grid>

                        <Border Grid.Row="4" BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="*,Auto" Padding="12,8">
                                <StackLayout Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                    <Ellipse Fill="{Binding StabilityColor, FallbackValue=Red}" WidthRequest="8" HeightRequest="8" VerticalOptions="Center" />
                                    <Label Text="{Binding StabilityStatus, FallbackValue='UNKNOWN'}" 
                                           TextColor="{Binding StabilityStatusColour, FallbackValue=Red}" 
                                           FontSize="{StaticResource LabelFontSize}" VerticalOptions="Center" FontAttributes="Bold"/>
                                </StackLayout>
                                <Label x:Name="ConnectionStatusLabel" Grid.Column="1" Text="{Binding ConnectionStatus}" 
                                       TextColor="#CCCCCC" FontSize="10" VerticalOptions="Center"/>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollView>
            </Border>

            <Border Grid.Column="1" BackgroundColor="#1A1A1A" Stroke="Transparent" StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,4" Radius="16" Opacity="0.3" />
                </Border.Shadow>
                <ScrollView>
                    <VerticalStackLayout Spacing="8" Padding="10">
                        <StackLayout Spacing="4">
                            <Label Text="Transaction Details" TextColor="White" FontSize="18" FontAttributes="Bold" />
                        </StackLayout>

                        <StackLayout IsVisible="{Binding FormConfig.Vehicle.IsVisible}" Spacing="4">
                            <Label TextColor="#CCCCCC" FontSize="10" FontAttributes="Bold">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding FormConfig.Vehicle.Label}" />
                                        <Span Text="{Binding FormConfig.Vehicle.IsMandatory, Converter={StaticResource BoolToStringConverter}}" TextColor="Red" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <StackLayout>
                                    <Entry Placeholder="Enter Vehicle License" Text="{Binding VehicleRegistration}" 
                                           TextColor="White" BackgroundColor="Transparent" Margin="8,4" FontSize="12" />
                                    <Picker x:Name="VehiclePicker"  TextColor="White" TitleColor="#888" 
                                            BackgroundColor="Transparent" ItemsSource="{Binding Vehicles}" SelectedItem="{Binding SelectedVehicle}" 
                                            ItemDisplayBinding="{Binding LicenseNumber}" Margin="8,4" FontSize="12">
                                        <Picker.Behaviors>
                                            <behaviors:EventToCommandBehavior EventName="Focused" Command="{Binding LoadVehiclesCommand}" />
                                        </Picker.Behaviors>
                                    </Picker>
                                </StackLayout>
                            </Border>
                        </StackLayout>

                        <StackLayout IsVisible="{Binding IsTareEntryVisible}" Spacing="4">
                            <Label x:Name="TareWeightLabel" Text="TARE WEIGHT (KG)" TextColor="#CCCCCC" FontSize="10" FontAttributes="Bold" />
                            <Border x:Name="TareWeightBorder" BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Entry x:Name="TareWeightEntry" Text="{Binding TareWeight}" TextColor="White" BackgroundColor="Transparent"
                                        Placeholder="Enter Tare Weight" PlaceholderColor="#888" Margin="8,4" Keyboard="Numeric" FontSize="12"/>
                            </Border>
                        </StackLayout>

                        <StackLayout IsVisible="{Binding FormConfig.SourceSite.IsVisible}" Spacing="4">
                            <Label TextColor="#CCCCCC" FontSize="10" FontAttributes="Bold">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding FormConfig.SourceSite.Label}" />
                                        <Span Text="{Binding FormConfig.SourceSite.IsMandatory, Converter={StaticResource BoolToStringConverter}}" TextColor="Red" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Picker x:Name="SourceSitePicker" TextColor="White" TitleColor="#888" 
                                        BackgroundColor="Transparent" ItemsSource="{Binding Sites}" SelectedItem="{Binding SelectedSourceSite}" 
                                        ItemDisplayBinding="{Binding Name}" Margin="8,4" FontSize="12">
                                    <Picker.Behaviors>
                                        <behaviors:EventToCommandBehavior EventName="Focused" Command="{Binding LoadSitesCommand}" />
                                    </Picker.Behaviors>
                                </Picker>
                            </Border>
                        </StackLayout>

                        <StackLayout IsVisible="{Binding FormConfig.DestinationSite.IsVisible}" Spacing="4">
                            <Label TextColor="#CCCCCC" FontSize="10" FontAttributes="Bold">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding FormConfig.DestinationSite.Label}" />
                                        <Span Text="{Binding FormConfig.DestinationSite.IsMandatory, Converter={StaticResource BoolToStringConverter}}" TextColor="Red" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Picker x:Name="DestinationSitePicker" TextColor="White" TitleColor="#888" 
                                        BackgroundColor="Transparent" ItemsSource="{Binding Sites}" SelectedItem="{Binding SelectedDestinationSite}" 
                                        ItemDisplayBinding="{Binding Name}" Margin="8,4" FontSize="12">
                                    <Picker.Behaviors>
                                        <behaviors:EventToCommandBehavior EventName="Focused" Command="{Binding LoadSitesCommand}" />
                                    </Picker.Behaviors>
                                </Picker>
                            </Border>
                        </StackLayout>

                        <StackLayout IsVisible="{Binding FormConfig.Item.IsVisible}" Spacing="4">
                            <Label TextColor="#CCCCCC" FontSize="10" FontAttributes="Bold">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding FormConfig.Item.Label}" />
                                        <Span Text="{Binding FormConfig.Item.IsMandatory, Converter={StaticResource BoolToStringConverter}}" TextColor="Red" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Picker x:Name="ItemPicker"  TextColor="White" TitleColor="#888" 
                                        BackgroundColor="Transparent" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" 
                                        ItemDisplayBinding="{Binding Name}" Margin="8,4" FontSize="12">
                                    <Picker.Behaviors>
                                        <behaviors:EventToCommandBehavior EventName="Focused" Command="{Binding LoadItemsCommand}" />
                                    </Picker.Behaviors>
                                </Picker>
                            </Border>
                        </StackLayout>

                        <StackLayout IsVisible="{Binding FormConfig.Customer.IsVisible}" Spacing="4">
                            <Label TextColor="#CCCCCC" FontSize="10" FontAttributes="Bold">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding FormConfig.Customer.Label}" />
                                        <Span Text="{Binding FormConfig.Customer.IsMandatory, Converter={StaticResource BoolToStringConverter}}" TextColor="Red" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Picker x:Name="CustomerPicker"  TextColor="White" TitleColor="#888" 
                                        BackgroundColor="Transparent" ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer}" 
                                        ItemDisplayBinding="{Binding Name}" Margin="8,4" FontSize="12">
                                    <Picker.Behaviors>
                                        <behaviors:EventToCommandBehavior EventName="Focused" Command="{Binding LoadCustomersCommand}" />
                                    </Picker.Behaviors>
                                </Picker>
                            </Border>
                        </StackLayout>

                        <StackLayout IsVisible="{Binding FormConfig.Transport.IsVisible}" Spacing="4">
                            <Label TextColor="#CCCCCC" FontSize="10" FontAttributes="Bold">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding FormConfig.Transport.Label}" />
                                        <Span Text="{Binding FormConfig.Transport.IsMandatory, Converter={StaticResource BoolToStringConverter}}" TextColor="Red" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Picker x:Name="TransportPicker"  TextColor="White" TitleColor="#888" 
                                        BackgroundColor="Transparent" ItemsSource="{Binding Transports}" SelectedItem="{Binding SelectedTransport}" 
                                        ItemDisplayBinding="{Binding Name}" Margin="8,4" FontSize="12">
                                    <Picker.Behaviors>
                                        <behaviors:EventToCommandBehavior EventName="Focused" Command="{Binding LoadTransportsCommand}" />
                                    </Picker.Behaviors>
                                </Picker>
                            </Border>
                        </StackLayout>

                        <StackLayout IsVisible="{Binding FormConfig.Driver.IsVisible}" Spacing="4">
                            <Label TextColor="#CCCCCC" FontSize="10" FontAttributes="Bold">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding FormConfig.Driver.Label}" />
                                        <Span Text="{Binding FormConfig.Driver.IsMandatory, Converter={StaticResource BoolToStringConverter}}" TextColor="Red" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Picker x:Name="DriverPicker"  TextColor="White" TitleColor="#888" 
                                        BackgroundColor="Transparent" ItemsSource="{Binding Drivers}" SelectedItem="{Binding SelectedDriver}" 
                                        ItemDisplayBinding="{Binding Name}" Margin="8,4" FontSize="12">
                                    <Picker.Behaviors>
                                        <behaviors:EventToCommandBehavior EventName="Focused" Command="{Binding LoadDriversCommand}" />
                                    </Picker.Behaviors>
                                </Picker>
                            </Border>
                        </StackLayout>

                        <StackLayout IsVisible="{Binding FormConfig.Remarks.IsVisible}" Spacing="4">
                            <Label TextColor="#CCCCCC" FontSize="10" FontAttributes="Bold">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding FormConfig.Remarks.Label}" />
                                        <Span Text="{Binding FormConfig.Remarks.IsMandatory, Converter={StaticResource BoolToStringConverter}}" TextColor="Red" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Editor x:Name="RemarksEditor" Text="{Binding Remarks}" AutoSize="TextChanges" 
                                        TextColor="White" BackgroundColor="Transparent" Placeholder="Enter any additional notes..." 
                                        PlaceholderColor="#888" Margin="8,4" FontSize="12" />
                            </Border>
                        </StackLayout>

                        <Grid RowDefinitions="Auto,Auto" RowSpacing="8" Margin="0,8,0,0">
                            <Grid Grid.Row="0" x:Name="MainButtonsGrid" ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Button x:Name="FirstWeightButton" Grid.Column="0" Text="{Binding FirstWeightButtonText}" 
                                        BackgroundColor="#FFD700" TextColor="#0E0E0E" CornerRadius="8" HeightRequest="40"
                                        FontAttributes="Bold" Clicked="OnToYardClicked" IsEnabled="{Binding IsWeightStable}" 
                                        FontSize="{StaticResource ButtonFontSize}" />
                                <Button x:Name="SecondWeightButton" Grid.Column="1" Text="SAVE and PRINT" 
                                        BackgroundColor="#00FF7F" TextColor="#0E0E0E" CornerRadius="8" HeightRequest="40"
                                        FontAttributes="Bold" Clicked="OnSaveAndPrintClicked" 
                                        IsVisible="{Binding IsSecondWeightButtonVisible}" IsEnabled="{Binding IsWeightStable}"
                                        FontSize="{StaticResource ButtonFontSize}" />
                            </Grid>

                            <Grid Grid.Row="1" x:Name="SecondaryButtonsGrid" ColumnSpacing="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" Text="UPDATE TARE" BackgroundColor="#2A2A2A" TextColor="White" 
                                          CornerRadius="8" HeightRequest="35" FontSize="9" Command="{Binding UpdateTareCommand}" />
                                <Button Grid.Column="1" x:Name="CancelDocketButton" Text="CANCEL DOCKET" 
                                        BackgroundColor="#FF4500" TextColor="White" CornerRadius="8" HeightRequest="35"
                                        FontSize="9" Command="{Binding CancelDocketCommand}" IsEnabled="{Binding IsDocketLoaded}" />
                            </Grid>
                        </Grid>
                    </VerticalStackLayout>
                </ScrollView>
            </Border>
        </Grid>
    </Grid>

    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup Name="CommonStates">

            <VisualState Name="Mobile">
                <VisualState.StateTriggers>
                    <AdaptiveTrigger MinWindowWidth="0" MinWindowHeight="0" />
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <Setter TargetName="ContentGrid" Property="Grid.ColumnDefinitions" Value="*" />
                    <Setter TargetName="ContentGrid" Property="Grid.RowDefinitions" Value="Auto,*" />

                    <Setter TargetName="ContentGrid" Property="Grid.Column" Value="0" />

                    <Setter TargetName="LiveWeightLabel" Property="Label.FontSize" Value="{StaticResource MobileWeightFontSize}" />
                    <Setter TargetName="EntranceWeightLabel" Property="Label.FontSize" Value="{StaticResource MobileSubWeightFontSize}" />

                    <Setter TargetName="ModesGrid" Property="Grid.ColumnDefinitions" Value="*,*" />
                    <Setter TargetName="ModesGrid" Property="Grid.RowDefinitions" Value="Auto,Auto" />

                    <Setter TargetName="EntryAndTareButton" Property="Grid.Column" Value="1" />
                    <Setter TargetName="EntryAndTareButton" Property="Grid.Row" Value="0" />
                    <Setter TargetName="TareAndExitButton" Property="Grid.Column" Value="0" />
                    <Setter TargetName="TareAndExitButton" Property="Grid.Row" Value="1" />
                    <Setter TargetName="SingleWeightButton" Property="Grid.Column" Value="1" />
                    <Setter TargetName="SingleWeightButton" Property="Grid.Row" Value="1" />

                    <Setter TargetName="SecondaryButtonsGrid" Property="Grid.ColumnDefinitions" Value="*,*" />
                    <Setter TargetName="SecondaryButtonsGrid" Property="Grid.RowDefinitions" Value="Auto,Auto" />

                    <Setter TargetName="SecondaryButtonsGrid" Property="Grid.Column" Value="1" />
                    <Setter TargetName="SecondaryButtonsGrid" Property="Grid.Row" Value="0" />
                </VisualState.Setters>
            </VisualState>

            <VisualState Name="Tablet">
                <VisualState.StateTriggers>
                    <AdaptiveTrigger MinWindowWidth="768" />
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <Setter TargetName="ContentGrid" Property="Grid.ColumnDefinitions" Value="1.5*,*" />

                    <Setter TargetName="MainGrid" Property="Grid.Padding" Value="16,0,16,16" />
                    <Setter TargetName="ContentGrid" Property="Grid.ColumnSpacing" Value="20" />
                </VisualState.Setters>
            </VisualState>

            <VisualState Name="Desktop">
                <VisualState.StateTriggers>
                    <AdaptiveTrigger MinWindowWidth="1024" />
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <Setter TargetName="ContentGrid" Property="Grid.ColumnDefinitions" Value="1.2*,*" />
                    <Setter TargetName="MainGrid" Property="Grid.Padding" Value="20,0,20,20" />
                    <Setter TargetName="ContentGrid" Property="Grid.ColumnSpacing" Value="24" />
                </VisualState.Setters>
            </VisualState>

            <VisualState Name="LargeDesktop">
                <VisualState.StateTriggers>
                    <AdaptiveTrigger MinWindowWidth="1440" />
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <Setter TargetName="MainGrid" Property="Grid.Padding" Value="24,0,24,24" />
                    <Setter TargetName="ContentGrid" Property="Grid.ColumnSpacing" Value="32" />

                    <Setter TargetName="LiveWeightLabel" Property="Label.FontSize" Value="52" />
                </VisualState.Setters>
            </VisualState>
        </VisualStateGroup>

        <VisualStateGroup Name="OrientationStates">
            <VisualState Name="Portrait">
                <VisualState.StateTriggers>
                    <AdaptiveTrigger MinWindowWidth="0" MinWindowHeight="600" />
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <Setter TargetName="ContentGrid" Property="Grid.ColumnDefinitions" Value="*" />
                    <Setter TargetName="ContentGrid" Property="Grid.RowDefinitions" Value="Auto,*" />

                    <Setter TargetName="ContentGrid" Property="Grid.Row" Value="1" />
