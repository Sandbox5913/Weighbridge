<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Weighbridge.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Weighbridge"
    Title="Weighbridge">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />


    <FlyoutItem Title="Settings">
        <ShellContent
            ContentTemplate="{DataTemplate local:Pages.SettingsPage}"
            Route="SettingsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Data Management">
        <ShellContent
            ContentTemplate="{DataTemplate local:Pages.DataManagementPage}"
            Route="DataManagementPage" />
    </FlyoutItem>

</Shell>
