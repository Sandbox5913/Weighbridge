<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Weighbridge.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Weighbridge"
    xmlns:pages="clr-namespace:Weighbridge.Pages"
    Title="Weighbridge">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Loads"
            ContentTemplate="{DataTemplate pages:LoadsPage}"
            Route="LoadsPage" />
        <Tab Title="Settings"
             Icon="settings_icon.png"
             IsVisible="{Binding IsAdmin}">
            <ShellContent
                Title="System Settings"
                ContentTemplate="{DataTemplate pages:SettingsPage}"
                Route="SettingsPage" />
            <ShellContent
                Title="Print Settings"
                ContentTemplate="{DataTemplate pages:PrintSettingsPage}"
                Route="PrintSettingsPage" />
            <ShellContent
                Title="Main Form Settings"
                ContentTemplate="{DataTemplate pages:MainFormSettingsPage}"
                Route="MainFormSettingsPage" />
            <ShellContent
                Title="User Management"
                ContentTemplate="{DataTemplate pages:UserManagementPage}"
                Route="UserManagementPage" />
        </Tab>
        <Tab Title="Data Management"
             Icon="dotnet_bot.png"
             IsVisible="{Binding IsAdmin}">
            <ShellContent
                Title="Customers"
                ContentTemplate="{DataTemplate pages:CustomerManagementPage}"
                Route="CustomerManagementPage" />
            <ShellContent
                Title="Drivers"
                ContentTemplate="{DataTemplate pages:DriverManagementPage}"
                Route="DriverManagementPage" />
            <ShellContent
                Title="Materials"
                ContentTemplate="{DataTemplate pages:MaterialManagementPage}"
                Route="MaterialManagementPage" />
            <ShellContent
                Title="Sites"
                ContentTemplate="{DataTemplate pages:SiteManagementPage}"
                Route="SiteManagementPage" />
            <ShellContent
                Title="Transport"
                ContentTemplate="{DataTemplate pages:TransportManagementPage}"
                Route="TransportManagementPage" />
            <ShellContent
                Title="Vehicles"
                ContentTemplate="{DataTemplate pages:VehicleManagementPage}"
                Route="VehicleManagementPage" />
        </Tab>
    </TabBar>

</Shell>