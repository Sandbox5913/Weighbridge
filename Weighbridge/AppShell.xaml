<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Weighbridge.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Weighbridge"
    xmlns:pages="clr-namespace:Weighbridge.Pages"
    Title="Weighbridge">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Loads"
            ContentTemplate="{DataTemplate pages:LoadsPage}"
            Route="LoadsPage" />
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate pages:SettingsPage}"
            Route="SettingsPage" />
        <ShellContent
            Title="Data Management"
            ContentTemplate="{DataTemplate pages:DataManagementPage}"
            Route="DataManagementPage" />
        <ShellContent
            Title="Print Settings"
            ContentTemplate="{DataTemplate pages:PrintSettingsPage}"
            Route="PrintSettingsPage" />
    </TabBar>

</Shell>