<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Weighbridge.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Weighbridge"
    xmlns:pages="clr-namespace:Weighbridge.Pages"
    Title="Weighbridge">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Loads"
            ContentTemplate="{DataTemplate pages:LoadsPage}"
            Route="LoadsPage" />
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate pages:SettingsPage}"
            Route="SettingsPage" />
        <Tab Title="Data Management"
             Icon="dotnet_bot.png"
             IsVisible="{Binding IsAdmin}">
            <ShellContent
                Title="Customers"
                ContentTemplate="{DataTemplate pages:CustomerManagementPage}"
                Route="CustomerManagementPage" />
            <ShellContent
                Title="Drivers"
                ContentTemplate="{DataTemplate pages:DriverManagementPage}"
                Route="DriverManagementPage" />
            <ShellContent
                Title="Materials"
                ContentTemplate="{DataTemplate pages:MaterialManagementPage}"
                Route="MaterialManagementPage" />
            <ShellContent
                Title="Sites"
                ContentTemplate="{DataTemplate pages:SiteManagementPage}"
                Route="SiteManagementPage" />
            <ShellContent
                Title="Transport"
                ContentTemplate="{DataTemplate pages:TransportManagementPage}"
                Route="TransportManagementPage" />
            <ShellContent
                Title="Vehicles"
                ContentTemplate="{DataTemplate pages:VehicleManagementPage}"
                Route="VehicleManagementPage" />
        </Tab>
        <ShellContent
            Title="Print Settings"
            ContentTemplate="{DataTemplate pages:PrintSettingsPage}"
            Route="PrintSettingsPage" />
    </TabBar>

</Shell>