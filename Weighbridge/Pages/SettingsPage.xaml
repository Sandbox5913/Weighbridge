<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weighbridge.Pages.SettingsPage"
             Title="System Settings"
             BackgroundColor="#0E0E0E">

    <ScrollView>
        <Grid Padding="24" RowSpacing="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackLayout Grid.Row="0" Spacing="8">
                <Label Text="System Settings" TextColor="White" FontSize="32" FontAttributes="Bold" />
                <Label Text="Configure weighbridge hardware and system preferences" TextColor="#CCCCCC" FontSize="16" />
            </StackLayout>

            <!-- Settings Cards -->
            <StackLayout Grid.Row="1" Spacing="24">

                <!-- Serial Port Configuration -->
                <Border BackgroundColor="#1A1A1A" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,4" Radius="16" Opacity="0.3" />
                    </Border.Shadow>
                    <StackLayout Padding="32" Spacing="20">

                        <StackLayout Spacing="8">
                            <Label Text="Serial Port Configuration" TextColor="White" FontSize="20" FontAttributes="Bold" />
                            <Label Text="Configure the connection to your weighbridge hardware" TextColor="#CCCCCC" FontSize="14" />
                        </StackLayout>

                        <StackLayout Spacing="16">
                            <!-- Port Selection -->
                            <StackLayout Spacing="8">
                                <Label Text="COMMUNICATION PORT" TextColor="#CCCCCC" FontSize="12" FontAttributes="Bold" />
                                <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Picker x:Name="PortPicker" 
                                            Title="Select Port"
                                            TextColor="White" 
                                            TitleColor="#888"
                                            BackgroundColor="Transparent"
                                            Margin="16,0"/>
                                </Border>
                            </StackLayout>

                            <!-- Baud Rate -->
                            <StackLayout Spacing="8">
                                <Label Text="BAUD RATE" TextColor="#CCCCCC" FontSize="12" FontAttributes="Bold" />
                                <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Entry x:Name="BaudRateEntry" 
                                           Placeholder="9600" 
                                           Keyboard="Numeric"
                                           PlaceholderColor="#888"
                                           TextColor="White"
                                           BackgroundColor="Transparent"
                                           Margin="16,0"/>
                                </Border>
                            </StackLayout>

                            <!-- Connection Status -->
                            <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Grid Padding="16,12" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                    <Ellipse Grid.Column="0" Fill="#00FF7F" WidthRequest="8" HeightRequest="8" VerticalOptions="Center" />
                                    <Label Grid.Column="1" Text="Connection Status: Connected" TextColor="#00FF7F" VerticalOptions="Center" FontSize="14" />
                                    <Label Grid.Column="2" Text="COM1" TextColor="#CCCCCC" VerticalOptions="Center" FontSize="14" />
                                </Grid>
                            </Border>
                        </StackLayout>

                        <!-- Action Buttons -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                            <Button Grid.Column="0" 
                                    Text="TEST CONNECTION" 
                                    BackgroundColor="#2A2A2A" 
                                    TextColor="White" 
                                    CornerRadius="8" 
                                    HeightRequest="48"
                                    FontAttributes="Bold"/>
                            <Button Grid.Column="1" 
                                    Text="SAVE SETTINGS" 
                                    BackgroundColor="#00FF7F" 
                                    TextColor="#0E0E0E" 
                                    CornerRadius="8" 
                                    HeightRequest="48"
                                    FontAttributes="Bold"
                                    Clicked="OnSaveClicked" />
                        </Grid>
                    </StackLayout>
                </Border>

                <!-- System Preferences -->
                <Border BackgroundColor="#1A1A1A" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,4" Radius="16" Opacity="0.3" />
                    </Border.Shadow>
                    <StackLayout Padding="32" Spacing="20">

                        <StackLayout Spacing="8">
                            <Label Text="System Preferences" TextColor="White" FontSize="20" FontAttributes="Bold" />
                            <Label Text="Configure application behavior and display settings" TextColor="#CCCCCC" FontSize="14" />
                        </StackLayout>

                        <StackLayout Spacing="16">
                            <!-- Auto Print -->
                            <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Grid Padding="16,12" ColumnDefinitions="*,Auto" ColumnSpacing="16">
                                    <StackLayout Grid.Column="0" Spacing="4">
                                        <Label Text="Auto Print Tickets" TextColor="White" FontSize="16" />
                                        <Label Text="Automatically print weighing tickets" TextColor="#CCCCCC" FontSize="12" />
                                    </StackLayout>
                                    <Switch Grid.Column="1" IsToggled="True" OnColor="#00FF7F" VerticalOptions="Center" />
                                </Grid>
                            </Border>

                            <!-- Sound Alerts -->
                            <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Grid Padding="16,12" ColumnDefinitions="*,Auto" ColumnSpacing="16">
                                    <StackLayout Grid.Column="0" Spacing="4">
                                        <Label Text="Sound Alerts" TextColor="White" FontSize="16" />
                                        <Label Text="Play sound notifications for weighing events" TextColor="#CCCCCC" FontSize="12" />
                                    </StackLayout>
                                    <Switch Grid.Column="1" IsToggled="True" OnColor="#00FF7F" VerticalOptions="Center" />
                                </Grid>
                            </Border>

                            <!-- Weight Units -->
                            <StackLayout Spacing="8">
                                <Label Text="WEIGHT UNITS" TextColor="#CCCCCC" FontSize="12" FontAttributes="Bold" />
                                <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Picker Title="Select Units" 
                                            TextColor="White" 
                                            TitleColor="#888"
                                            BackgroundColor="Transparent"
                                            Margin="16,0">
                                        <Picker.ItemsSource>
                                            <x:Array Type="{x:Type x:String}">
                                                <x:String>Kilograms (KG)</x:String>
                                                <x:String>Pounds (LBS)</x:String>
                                                <x:String>Tons</x:String>
                                            </x:Array>
                                        </Picker.ItemsSource>
                                    </Picker>
                                </Border>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Border>

                <!-- Database Settings -->
                <Border BackgroundColor="#1A1A1A" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,4" Radius="16" Opacity="0.3" />
                    </Border.Shadow>
                    <StackLayout Padding="32" Spacing="20">

                        <StackLayout Spacing="8">
                            <Label Text="Database Management" TextColor="White" FontSize="20" FontAttributes="Bold" />
                            <Label Text="Backup and maintenance operations" TextColor="#CCCCCC" FontSize="14" />
                        </StackLayout>

                        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                            <Button Grid.Column="0" 
                                    Text="BACKUP" 
                                    BackgroundColor="#FFD700" 
                                    TextColor="#0E0E0E" 
                                    CornerRadius="8" 
                                    FontAttributes="Bold"/>
                            <Button Grid.Column="1" 
                                    Text="RESTORE" 
                                    BackgroundColor="#2A2A2A" 
                                    TextColor="White" 
                                    CornerRadius="8" 
                                    FontAttributes="Bold"/>
                            <Button Grid.Column="2" 
                                    Text="RESET" 
                                    BackgroundColor="#FF4D4D" 
                                    TextColor="White" 
                                    CornerRadius="8" 
                                    FontAttributes="Bold"/>
                        </Grid>
                    </StackLayout>
                </Border>

                <!-- About Section -->
                <Border BackgroundColor="#1A1A1A" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,4" Radius="16" Opacity="0.3" />
                    </Border.Shadow>
                    <StackLayout Padding="32" Spacing="16">
                        <Label Text="System Information" TextColor="White" FontSize="20" FontAttributes="Bold" />

                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="24" RowSpacing="12">
                            <Label Grid.Row="0" Grid.Column="0" Text="Application Version" TextColor="#CCCCCC" FontSize="14" />
                            <Label Grid.Row="0" Grid.Column="1" Text="v1.0.0" TextColor="White" FontSize="14" />

                            <Label Grid.Row="1" Grid.Column="0" Text="Database Version" TextColor="#CCCCCC" FontSize="14" />
                            <Label Grid.Row="1" Grid.Column="1" Text="1.9.172" TextColor="White" FontSize="14" />

                            <Label Grid.Row="2" Grid.Column="0" Text="Last Backup" TextColor="#CCCCCC" FontSize="14" />
                            <Label Grid.Row="2" Grid.Column="1" Text="Never" TextColor="#FF4D4D" FontSize="14" />
                        </Grid>
                    </StackLayout>
                </Border>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>