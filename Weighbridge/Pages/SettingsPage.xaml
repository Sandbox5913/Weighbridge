<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weighbridge.Pages.SettingsPage"
             Title="System Settings"
             BackgroundColor="#0E0E0E">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Print Settings" Clicked="OnPrintSettingsClicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <Grid Padding="24" RowSpacing="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" Spacing="8">
                <Label Text="System Settings" TextColor="White" FontSize="32" FontAttributes="Bold" />
                <Label Text="Configure weighbridge hardware and system preferences" TextColor="#CCCCCC" FontSize="16" />
            </StackLayout>

            <StackLayout Grid.Row="1" Spacing="24">

                <Border BackgroundColor="#1A1A1A" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,4" Radius="16" Opacity="0.3" />
                    </Border.Shadow>
                    <StackLayout Padding="32" Spacing="20">

                        <StackLayout Spacing="8">
                            <Label Text="Serial Port Configuration" TextColor="White" FontSize="20" FontAttributes="Bold" />
                            <Label Text="Configure the connection to your weighbridge hardware" TextColor="#CCCCCC" FontSize="14" />
                        </StackLayout>

                        <StackLayout Spacing="16">
                            <StackLayout Spacing="8">
                                <Label Text="COMMUNICATION PORT" TextColor="#CCCCCC" FontSize="12" FontAttributes="Bold" />
                                <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Picker x:Name="PortPicker"
                                            Title="Select Port"
                                            TextColor="White"
                                            TitleColor="#888"
                                            BackgroundColor="Transparent"
                                            Margin="16,16"/>
                                </Border>
                            </StackLayout>

                            <StackLayout Spacing="8">
                                <Label Text="BAUD RATE" TextColor="#CCCCCC" FontSize="12" FontAttributes="Bold" />
                                <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Entry x:Name="BaudRateEntry"
                                           Placeholder="9600"
                                           Keyboard="Numeric"
                                           PlaceholderColor="#888"
                                           TextColor="White"
                                           BackgroundColor="Transparent"
                                           Margin="16,16"/>
                                </Border>
                            </StackLayout>

                            <StackLayout Spacing="8">
                                <Label Text="REGEX FOR PARSING" TextColor="#CCCCCC" FontSize="12" FontAttributes="Bold" />
                                <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Entry x:Name="RegexEntry" Placeholder="Enter Regex" TextColor="White" BackgroundColor="Transparent" Margin="16,16"/>
                                </Border>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout Spacing="16">
                            <Label Text="STABILITY DETECTION" TextColor="#CCCCCC" FontSize="12" FontAttributes="Bold" />
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="Enable Stability Detection" TextColor="White" VerticalOptions="Center"/>
                                <Switch x:Name="StabilitySwitch" IsToggled="True" />
                            </StackLayout>
                            <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Entry x:Name="StableTimeEntry" Placeholder="Stable Time (seconds)" Keyboard="Numeric" TextColor="White" BackgroundColor="Transparent" Margin="16,16"/>
                            </Border>
                            <Border BackgroundColor="#2A2A2A" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Entry x:Name="StabilityRegexEntry" Placeholder="Stability Regex (optional)" TextColor="White" BackgroundColor="Transparent" Margin="16,16"/>
                            </Border>
                        </StackLayout>
                        <StackLayout Spacing="8">
                            <Label Text="SERIAL DATA PREVIEW" TextColor="#CCCCCC" FontSize="12" FontAttributes="Bold" />
                            <Border BackgroundColor="#000000" Padding="12" StrokeThickness="1" Stroke="#444">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Label x:Name="SerialOutputLabel" TextColor="#00FF7F" FontSize="14" FontFamily="Courier New" HeightRequest="50" />
                            </Border>
                        </StackLayout>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                            <Button Grid.Column="0"
                                    x:Name="TestConnectionButton"
                                    Text="TEST CONNECTION"
                                    BackgroundColor="#2A2A2A"
                                    TextColor="White"
                                    CornerRadius="8"
                                    HeightRequest="48"
                                    FontAttributes="Bold"
                                    Clicked="OnTestConnectionClicked"/>
                            <Button Grid.Column="1"
                                    Text="SAVE SETTINGS"
                                    BackgroundColor="#00FF7F"
                                    TextColor="#0E0E0E"
                                    CornerRadius="8"
                                    HeightRequest="48"
                                    FontAttributes="Bold"
                                    Clicked="OnSaveClicked" />
                        </Grid>
                    </StackLayout>
                </Border>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>