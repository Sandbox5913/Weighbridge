
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weighbridge.Pages.SettingsPage"
             Title="Settings">
    <VerticalStackLayout Padding="20">
        <Label Text="Serial Port Settings" FontSize="Large" HorizontalOptions="Center" />

        <Picker x:Name="PortPicker" Title="Select Port"/>
        <Entry x:Name="BaudRateEntry" Placeholder="Baud Rate" Keyboard="Numeric"/>
        
        <Button Text="Save" Clicked="OnSaveClicked" />
    </VerticalStackLayout>
</ContentPage>
