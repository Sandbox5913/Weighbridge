
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Weighbridge.ViewModels"
             x:Class="Weighbridge.Pages.AuditLogPage"
             Title="Audit Logs">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <SearchBar Grid.Row="0" 
                     Placeholder="Search..." 
                     Text="{Binding SearchText}" />

        <ListView Grid.Row="1" ItemsSource="{Binding AuditLogs}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Timestamp, StringFormat='{0:G}'}" />
                            <Label Text="{Binding Username}" />
                            <Label Text="{Binding Action}" />
                            <Label Text="{Binding EntityType}" />
                            <Label Text="{Binding Details}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>
