<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weighbridge.Pages.LoadsPage"
             Title="Saved Loads"
             BackgroundColor="#0E0E0E">
    <Grid Padding="24" RowSpacing="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" Spacing="8">
            <Label Text="Transaction History" TextColor="White" FontSize="28" FontAttributes="Bold" />
            <Label Text="Review, modify, or reprint saved dockets" TextColor="#CCCCCC" FontSize="16" />
        </StackLayout>

        <CollectionView x:Name="loadsListView" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border BackgroundColor="#1A1A1A" StrokeThickness="0" Margin="0,8">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="16" />
                        </Border.StrokeShape>
                        <StackLayout Padding="20" Spacing="12">
                            <Grid ColumnDefinitions="*, Auto">
                                <Label Grid.Column="0" Text="{Binding VehicleLicense, StringFormat='Vehicle: {0}'}" TextColor="White" FontSize="16" FontAttributes="Bold"/>
                                <Label Grid.Column="1" Text="{Binding Timestamp, StringFormat='{0:g}'}" TextColor="#CCCCCC" FontSize="12"/>
                            </Grid>
                            <Label Text="{Binding CustomerName, StringFormat='Customer: {0}'}" TextColor="#CCCCCC" FontSize="14"/>
                            <Label Text="{Binding NetWeight, StringFormat='Net Weight: {0} KG'}" TextColor="White" FontSize="14"/>
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,10,0,0">
                                <Button Grid.Column="0" Text="MODIFY" BackgroundColor="#FFD700" TextColor="#0E0E0E" CornerRadius="8" FontAttributes="Bold" CommandParameter="{Binding .}" Clicked="OnModifyClicked"/>
                                <Button Grid.Column="1" Text="REPRINT" BackgroundColor="#00FF7F" TextColor="#0E0E0E" CornerRadius="8" FontAttributes="Bold" CommandParameter="{Binding .}" Clicked="OnReprintClicked"/>
                            </Grid>
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>