<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Weighbridge.ViewModels"
             xmlns:models="clr-namespace:Weighbridge.Models"
             x:DataType="viewmodels:UserPageAccessManagementViewModel"
             x:Class="Weighbridge.Pages.UserPageAccessManagementPage"
             Title="User Page Access Management">

    <Grid ColumnDefinitions="2*, 3*" Padding="20">
        <!-- User List -->
        <ScrollView Grid.Column="0">
            <VerticalStackLayout Spacing="10">
                <Label Text="Users" FontAttributes="Bold" FontSize="Large" />
                <CollectionView ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}" SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding Username}" Padding="10" BackgroundColor="Red" TextColor="White" FontFamily="Arial" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Page Access List -->
        <ScrollView Grid.Column="1">
            <VerticalStackLayout Spacing="10">
                <Label Text="Page Access" FontAttributes="Bold" FontSize="Large" />
                <CollectionView ItemsSource="{Binding Pages}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:PageAccessViewModel">
                            <HorizontalStackLayout Spacing="10" Padding="10">
                                <Switch IsToggled="{Binding HasAccess}" />
                                <Label Text="{Binding PageName}" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label Text="{Binding ValidationErrors.Errors[0].ErrorMessage}" IsVisible="{Binding ValidationErrors.Errors.Count}" TextColor="Red" FontSize="12" Margin="0,10,0,0" />
                <Button Text="Save" Command="{Binding SavePageAccessCommand}" HorizontalOptions="End" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
