                        <Button Grid.Column="1" x:Name="updateDriverButton" Text="UPDATE" BackgroundColor="#FFD700" TextColor="#0E0E0E" CornerRadius="8" FontAttributes="Bold" Clicked="OnUpdateDriverClicked" IsEnabled="False" />
