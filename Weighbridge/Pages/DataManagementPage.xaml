<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Weighbridge.Pages.DataManagementPage"
          >

    <!-- Customers Tab -->
    <ContentPage Title="Customers">
        <VerticalStackLayout Padding="10" Spacing="10">
            <Entry x:Name="customerEntry" Placeholder="Enter customer name" />
            <HorizontalStackLayout Spacing="5">
                <Button x:Name="addCustomerButton" Text="Add" Clicked="OnAddCustomerClicked" />
                <Button x:Name="updateCustomerButton" Text="Update" Clicked="OnUpdateCustomerClicked" IsEnabled="False" />
                <Button Text="Clear" Clicked="OnClearCustomerClicked" />
            </HorizontalStackLayout>

            <CollectionView x:Name="customerListView"
                            SelectionMode="Single"
                            SelectionChanged="OnCustomerSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout Spacing="10" Padding="5">
                            <Label Text="{Binding Name}" VerticalOptions="Center" />
                            <Button Text="Delete"
                                    CommandParameter="{Binding .}"
                                    Clicked="OnDeleteCustomerClicked" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ContentPage>

