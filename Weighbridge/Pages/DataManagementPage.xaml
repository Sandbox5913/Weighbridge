                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" Spacing="8">
                <Label Text="Site Management" TextColor="White" FontSize="28" FontAttributes="Bold" />
                <Label Text="Add, edit, and manage site locations" TextColor="#CCCCCC" FontSize="16" />
            </StackLayout>

            <Border Grid.Row="1" BackgroundColor="#1A1A1A" StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,4" Radius="16" Opacity="0.3" />
                </Border.Shadow>
                <StackLayout Padding="24" Spacing="16">
                    <Label Text="SITE DETAILS" TextColor="#CCCCCC" FontSize="12" FontAttributes="Bold" />
