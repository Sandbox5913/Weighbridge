<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Weighbridge.ViewModels"
             x:DataType="viewmodels:LoginViewModel"
             x:Class="Weighbridge.Pages.LoginPage"
             Title="Login"
             Style="{StaticResource DarkPageStyle}">

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="32,60,32,40" VerticalOptions="Fill">

            <!-- Logo/Icon Section -->
            <Frame BackgroundColor="#16213E" 
                   CornerRadius="30" 
                   WidthRequest="120" 
                   HeightRequest="120" 
                   HorizontalOptions="Center" 
                   Margin="0,0,0,40"
                   HasShadow="True">
                <Label Text="⚖️" 
                       FontSize="48" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" />
            </Frame>

            <!-- Title Section -->
            <Label Text="Weighbridge" 
                   TextColor="{StaticResource White}" 
                   FontSize="36" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   Margin="0,0,0,8" />

            <Label Text="Management System" 
                   TextColor="{StaticResource Gray200}" 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   Margin="0,0,0,50" />

            <!-- Login Form -->
            <Border BackgroundColor="#1F2937" 
                    StrokeThickness="1" 
                    Stroke="#374151"
                    Padding="32,40"
                    Margin="0,0,0,30">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>

                <!-- Drop shadow effect -->
                <Border.Shadow>
                    <Shadow Brush="#000000" 
                            Offset="0,8" 
                            Radius="24" 
                            Opacity="0.3" />
                </Border.Shadow>

                <StackLayout Spacing="24">

                    <!-- Username Field -->
                    <StackLayout Spacing="8">
                        <Label Text="Username" 
                               TextColor="{StaticResource White}" 
                               FontSize="14" 
                               FontAttributes="Bold" />
                        <Border BackgroundColor="#374151" 
                                StrokeThickness="2" 
                                Stroke="#4B5563">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Entry Placeholder="Enter your username" 
                                   Text="{Binding Username}" 
                                   Style="{StaticResource DarkEntryStyle}" />
                        </Border>
                    </StackLayout>

                    <!-- Password Field -->
                    <StackLayout Spacing="8">
                        <Label Text="Password" 
                               TextColor="{StaticResource White}" 
                               FontSize="14" 
                               FontAttributes="Bold" />
                        <Border BackgroundColor="#374151" 
                                StrokeThickness="2" 
                                Stroke="#4B5563">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Entry Placeholder="Enter your password" 
                                   Text="{Binding Password}" 
                                   IsPassword="True" 
                                   Style="{StaticResource DarkEntryStyle}" 
                                   Completed="OnLoginClicked" />
                        </Border>
                    </StackLayout>

                    <!-- Validation Errors -->
                    <Label Text="{Binding ValidationErrors}"
                           TextColor="#FF6347" 
                           FontSize="14" 
                           HorizontalOptions="Center"
                           Margin="0,0,0,10" />

                    <!-- Login Button -->
                    <Button Text="Sign In" 
                            Command="{Binding LoginCommand}" 
                            Style="{StaticResource DarkButtonStyle}" 
                            HeightRequest="56"
                            Margin="0,16,0,0" />

                    <!-- Loading Indicator -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                       Color="#3B82F6" 
                                       WidthRequest="32" 
                                       HeightRequest="32"
                                       HorizontalOptions="Center"
                                       IsVisible="{Binding IsBusy}" />

                </StackLayout>
            </Border>

            <!-- Demo Credentials Info -->
            <Border BackgroundColor="#0F172A" 
                    StrokeThickness="1" 
                    Stroke="#334155"
                    Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12" />
                </Border.StrokeShape>

                <StackLayout Spacing="12">
                    <Label Text="Demo Credentials" 
                           TextColor="{StaticResource Gray300}" 
                           FontSize="14" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />

                    <StackLayout Spacing="6">
                        <Label HorizontalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Admin: " TextColor="{StaticResource Gray400}" FontSize="12" FontAttributes="Bold" />
                                    <Span Text="admin / admin" TextColor="{StaticResource Gray100}" FontSize="12" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label HorizontalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Operator: " TextColor="{StaticResource Gray400}" FontSize="12" FontAttributes="Bold" />
                                    <Span Text="operator / operator" TextColor="{StaticResource Gray100}" FontSize="12" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </StackLayout>
                </StackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>